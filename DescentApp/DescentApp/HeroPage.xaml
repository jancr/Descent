<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DescentApp.HeroPage"
             Title="Hero Setup">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label VerticalOptions="Start"
                       Text="Main Hand" />
                <Picker VerticalOptions="End"
                    SelectedIndex="{Binding mainHandItem.SelectedIndex}"
                    ItemsSource="{Binding mainHandItem.ItemNames}"
                        />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label VerticalOptions="Start"
                       Text="Off Hand" />
                <Picker VerticalOptions="End"
                    SelectedIndex="{Binding offHandItem.SelectedIndex}"
                    ItemsSource="{Binding offHandItem.Itemnames}" />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>